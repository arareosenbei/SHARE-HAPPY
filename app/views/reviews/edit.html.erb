<div class="container-fluid">
  <div class="row">
    <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3">
      <div class="head">
        <h4>
        レビューを書く
      </h4>

<%= form_with model: @review, url: place_review_path(@place, @review), local:true do |f| %>
  <%= f.text_field :title %>
  
  <!--星の機能-->
  
  <div class="form-group row" id="star">
    
    <%= f.hidden_field :rate, id: :review_star %>
  </div>

  <!--削除機能-->
  <%= link_to 'レビューを削除',place_review_path(@place, @review) , method: :delete %>

  
  <!-- 評価javascript -->
  <div id="star-rate-<%= @review.id %>"></div>
  <script>
  $('#star').raty({
    size     : 36,
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    scoreName: 'review[rate]',
    half: false,
    score: <%= @review.rate %>,
  });
  </script>  
  <p><%= f.text_area :body, placeholder: "本文を入力" %></p>
  <p><%= f.submit "変更する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %></p>
<% end %>

  </div>
  </div>  
</div>
      </div>
      
      
      
      
      
      
      
      
      
      
      