<div class="container-fluid">
  <div class="row">
    <div class="col-6 offset-3">
        <div class=" head post-show-wrapper">
    
          <div class="post-image">
            <%= attachment_image_tag @post, :image, fallback: "noimage.png" %>
          </div>
          <h4 class="title post-title">
            <%= @post.title %>
          </h4>
          <div class="reaction post-s-reaction">
                <!--いいね表示-->
            <div class="favorite">
              <% if @post.favorited_by?(current_user) %>
                <i class="fa fa-heart favorite-color" aria-hidden="true", style=""></i>
                <span class="postcard-reaction-text favorite-color">
                  <%= @post.favorites.count %>
                </span>
              <% else %>
                <i class="fa fa-heart-o postcard-favorite-heart favorite-color" aria-hidden="true"></i>
                <span class="postcard-reaction-text favorite-color">
                  <%= @post.favorites.count %>
                </span>
              <% end %>
            </div>
                <!--コメント表示-->
            <div class="">
              <i class="fa fa-commenting comment-color" aria-hidden="true"></i>
              <span class="postcard-reaction-text comment-color"><%= @post.comments.count %></span>
            </div>
          </div>
          <div class="post-s-user">
            <%= link_to user_path(@post) do %>
              <div class="flex">
                <%= attachment_image_tag @post.user, :image, fallback: "noimage.png", class:'postcard-user-image' %>
                <div class="post-s-u-status">
            <!--<div class="post-user-name">-->
                  <p class="post-s-u-name"><%= @post.user.name %></p>
            <!--</div>-->
                  <p class="post-s-u-date"><%= @post.created_at.strftime('%Y/%m/%d') %></p>
                </div>
        
              </div>
      
            <% end %>
            <%= @post.body %>
          </div>
        </div>
        <div>
            <!--いいね-->
          <div class="favorite post-s-u-favorite">
            <%= render 'favorites/favorite', post: @post %>
          </div>
        </div>
        <div class=" comment post-s-u-comment-wrapper">
          <%= render 'comments/index', post: @post, comments: @comments %>
        </div>
        <!--コメントフォーム-->
          <!--コメントのAJAX表示されてないからやり直し-->
          <div class="post-s-u-comment-form">
            <%= render 'comments/form', post: @post, comment: @comment %>
          </div>
          <%= link_to '一覧に戻る', posts_path, class:"btn btn-outline-primary p-submit" %>
          <% if %>
            <%= link_to '編集', edit_post_path(@post), class:"btn btn-outline-primary p-submit" %>
          <% end %>
    
   
<!--自分の結婚式なら削除リンク-->
          <% if @post.user == current_user %>
            <%= link_to '削除', post_path(@post), method: :delete, class:"btn btn-outline-primary p-submit" %>
          <% end %>
        </div>
      </div>
   </div> 
  