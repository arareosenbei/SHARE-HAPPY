<div class="container-fluid">
  <div class="row">
    <div class="col-6 offset-3">
      <div class="head review">
      <h4 class="title">
        結婚式を記録する
      </h4>
    </div>
    <div class="row">
      <div class="">
        <%= form_with model: @post, local:true do |f| %>
          <p>
            <%= f.file_field :image, class: 'img_field', style: 'display:none;'%>
            <%= attachment_image_tag @post, :image, fallback: 'noimage.png', onClick: "$('.img_field').click()", class: 'center-block img-thumbnail img-responsive img_prev'  %>
          </p>
          <p><%= f.text_field :title, placeholder: '結婚式タイトル' %></p>
          <p><%= f.text_area :body, placeholder: '本文' %></p>
        　<!--場所選択-->
          <p>
            <%= f.collection_select :place_id, Place.all, :id, :name, include_blank: "--結婚式場を選択--" %>
          </p>
          
          <p><%= f.submit '投稿', class: "btn btn-outline-primary p-submit" %></p>
        <% end %>
      </div>
    
    </div>
    </div>
  </div>
</div>