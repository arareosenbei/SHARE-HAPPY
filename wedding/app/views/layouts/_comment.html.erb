<p>
<%= form_with(model:[post, comment], local: true) do |f| %>
  <div class="row">
    <div class="col-sm-12">
      <%= f.text_area :body, rows:'5', class: "form-control",placeholder: "コメントを入力" %>
    </div>
  </div>
  <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
<% end %>
</p>
<!--コメント一覧-->
<p>
  <% post.comments.each do |comment| %>
      <div class="comment-body bb">
        <div class="comment-avatar">
          <div class="avatar">
            <%= attachment_image_tag user, :image, size: '100x100', format: 'jpg'  %>
          </div>
        </div>
        <div class="comment-text">
          <div class="comment-author clearfix">
            <a href="#" class="link-author"><%= comment.user.name %></a>
            <span class="comment-meta">
              <span class="comment-date"><%= comment.created_at.strftime('%Y/%m/%d') %></span>
            </span>
          </div>
          <div class="comment-entry"><%= comment.body %></div>
<!--コメント削除機能-->
<% if comment.user == current_user %>
  <div>
    <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete, class: "btn btn-danger pull-right" %>
  </div>
<% end %>
        </div>
      </div>
    </li>
  <% end %>
</p>