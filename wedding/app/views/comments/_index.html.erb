<p>
  <% post.comments.each do |comment| %>
    <%= attachment_image_tag comment.user, :image, size: '100x100', format: 'jpg'  %>
    <%= comment.user.name %></a>
    <%= comment.created_at.strftime('%Y/%m/%d') %>
    <%= comment.body %>
