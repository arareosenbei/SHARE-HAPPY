<div class="container">
  <div　class="row">
    <div class="">
      <h1>
        結婚式を記録する
      </h1>
    </div>
    <div class="row">
      <div class="">
        <%= form_with model: @post, local:true do |f| %>
          <p>
            <%= f.file_field :image, class: 'img_field', style: 'display:none;'%>
            <%= attachment_image_tag @post, :image, fallback: 'noimage.png', onClick: "$('.img_field').click()", class: 'center-block img-thumbnail img-responsive img_prev'  %>
          </p>
          <p><%= f.text_field :title, placeholder: '結婚式タイトル' %></p>
          <p><%= f.text_area :body, placeholder: '本文' %></p>
          <p><%= f.submit '投稿', class: "btn btn-primary" %></p>
        <% end %>
      </div>
    
    </div>
    <div class="row">
      
    </div>
  </div>
</div>